<% include header %>
<style>
.index-banner {
  display: block;
}
</style>
<p class="count"><i class="iconfont">&#x35bc;</i> Total Packages: <%= count %></p>

<section class="index-box">
  <section class="index-list">
    <h2>Recently Updated</h2>
    <ul>
    <% recentlyUpdates.forEach(function(u) { %>
      <li><a href="/package/<%= u.name %>"><%= u.name %></a> <%= u.fromNow %></li>
    <% }) %>
    </ul>
  </section>
  <section class="index-list">
    <h2>Most Depended Upon</h2>
    <ul>
    <% mostDependents.forEach(function(d) { %>
      <li><a href="/package/<%= d.name %>"><%= d.name %></a> <%= d.count %> packages</li>
    <% }) %>
    </ul>
  </section>
  <section class="index-list">
    <h2>Top submittors</h2>
    <ul>
    <% submitors.forEach(function(s) { %>
      <li><a href="/account/<%= s.account %>"><%= s.account %></a> <%= s.count %> times</li>
    <% }) %>
    </ul>
  </section>
</section>
<% include footer %>
